<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="meas-pu" transaction-type="RESOURCE_LOCAL">
        <description>
            Persistence unit for the measurements storage
        </description>
<!--        <provider>jakarta.persistence.Persistence</provider>-->
        
        <class>com.lankheet.iot.datatypes.entities.Measurement</class>
        <class>com.lankheet.iot.datatypes.entities.MeasurementType</class>
        <class>com.lankheet.iot.datatypes.entities.Sensor</class>
        <class>com.lankheet.iot.datatypes.entities.SensorType</class>
        <class>com.lankheet.iot.datatypes.entities.DomoticsUser</class>
        <class>com.lankheet.iot.datatypes.entities.Site</class>
        <class>com.lankheet.iot.datatypes.entities.Actuator</class>
        <class>com.lankheet.iot.datatypes.entities.Permission</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/domotics" />
            <property name="jakarta.persistence.jdbc.user" value="lds" />
            <property name="jakarta.persistence.jdbc.password" value="lds-iot" />
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />-->
<!--            <property name="hibernate.show_sql" value="true" />-->
<!--            <property name="hibernate.hbm2ddl.auto" value="update" />-->
        </properties>

 	</persistence-unit>
</persistence>
